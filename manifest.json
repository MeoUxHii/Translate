{
    "manifest_version": 3,
    "name": "MeoU",
    "version": "1.9.4",
    "description": "Cái gì khó có tao lo",
    "permissions": ["storage", "activeTab", "contextMenus", "geolocation"],
    "host_permissions": [
        "https://texttospeech.googleapis.com/*",
        "https://translation.googleapis.com/*",
        "https://generativelanguage.googleapis.com/*",
        "https://vision.googleapis.com/*",
        "<all_urls>"
    ],
    
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["assets.js", "utils.js", "ui-renderer.js", "wibu-mode.js", "content.js"]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "media/*.mp3", 
                "content.css",
                "pictures/*.webp",
                "voice/*/*.mp3",
                "avatar/*.png"
            ],
            "matches": ["<all_urls>"]
        }
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "commands": {
        "translate-text": {
            "suggested_key": {
                "default": "Alt+Shift+T"
            },
            "description": "Dịch văn bản đã chọn"
        }
    }
}